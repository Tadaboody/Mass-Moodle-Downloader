{
    "manifest_version": 2,
    "name": "Mass Moodle Downloader",
    "description": "Mass Download a moodle courses files",
    "version": "0.1",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon24.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*.haifa.ac.il/course/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "downloads"
    ]
}