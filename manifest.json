{
    "manifest_version": 2,
    "name": "Moodle Mass Downloader",
    "description": "Mass Download a moodle courses files",
    "version": "1.04",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "page_action": {
        "default_icon": "icons/icon24.png"
    },
    "content_scripts": [{
        "matches": ["*://*.ac.il/course/*"],
        "js": ["content.js"],   
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "*://*.ac.il/*/cs/*",
        "downloads"
    ]
}